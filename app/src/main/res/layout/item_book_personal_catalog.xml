<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="12dp"
    app:cardCornerRadius="18dp"
    app:cardElevation="3dp"
    app:strokeColor="#D8D8DD"
    app:strokeWidth="1dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="14dp">

        <!-- Copertina Libro (100x150dp) -->
        <ImageView
            android:id="@+id/personalCoverImageView"
            android:layout_width="100dp"
            android:layout_height="150dp"
            android:layout_marginEnd="14dp"
            android:scaleType="centerCrop"
            android:src="@drawable/catalog_book_cover_placeholder" />

        <!-- Colonna destra: titolo, autore e toggle stato lettura -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical">

            <!-- Titolo -->
            <TextView
                android:id="@+id/personalTitleTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#1F1F1F"
                android:textSize="16sp"
                android:textStyle="bold"
                android:maxLines="2"
                android:ellipsize="end" />

            <!-- Autore -->
            <TextView
                android:id="@+id/personalAuthorTextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="6dp"
                android:textColor="#2B2B2B"
                android:textSize="14sp" />

            <!-- Spacer per spingere il toggle in basso -->
            <Space
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1" />

            <!-- Toggle a 3 stati: Non Letto | In Lettura | Letto -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:orientation="horizontal"
                android:gravity="center">

                <Button
                    android:id="@+id/readingStatusNotReadButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginEnd="4dp"
                    android:backgroundTint="#E8E8E8"
                    android:text="Non Letto"
                    android:textAllCaps="false"
                    android:textColor="#2B2B2B"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/readingStatusReadingButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginHorizontal="4dp"
                    android:backgroundTint="#E8E8E8"
                    android:text="In Lettura"
                    android:textAllCaps="false"
                    android:textColor="#2B2B2B"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/readingStatusReadButton"
                    android:layout_width="0dp"
                    android:layout_height="36dp"
                    android:layout_weight="1"
                    android:layout_marginStart="4dp"
                    android:backgroundTint="#E8E8E8"
                    android:text="Letto"
                    android:textAllCaps="false"
                    android:textColor="#2B2B2B"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</com.google.android.material.card.MaterialCardView>
