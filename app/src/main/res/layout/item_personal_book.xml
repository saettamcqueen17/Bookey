<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="10dp"
    android:background="#EEF7FF"
    android:orientation="vertical"
    android:padding="12dp">

    <TextView
        android:id="@+id/tvPersonalTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvPersonalAuthor"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="2dp" />

    <TextView
        android:id="@+id/tvPersonalRating"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <TextView
        android:id="@+id/tvPersonalStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <TextView
        android:id="@+id/tvPersonalReview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="end"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/btnEditPersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Modifica"
            android:src="@android:drawable/ic_menu_edit" />

        <ImageButton
            android:id="@+id/btnRemovePersonal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:contentDescription="Rimuovi"
            android:src="@android:drawable/ic_menu_delete" />
    </LinearLayout>

</LinearLayout>
